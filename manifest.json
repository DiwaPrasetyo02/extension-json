{
  "manifest_version": 3,
  "name": "Prompt to JSON Enhancer",
  "version": "1.0.0",
  "description": "Transforms AI prompts into structured JSON with enhanced context.",
  "permissions": ["clipboardWrite"],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*"
      ],
      "js": ["transformer.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
